<% include partials/header %>
<h1 class="text-center">Enter In Your Favorite Wines!</h1>

<form action="/wines" method="POST" class="form-horizontal">

	<div class="form-group">
		<label for="varietal">Varietal</label>
			<div class="col-sm-10">	
				<input type="text" name="wines[varietal]" id="varietal" class="form-control" placeholder="Varietal">
			</div>
	</div>
	
	<div class="form-group">
		<label for="vintage">Vintage</label>
			<div class="col-sm-10">	
				<input type="text" name="wines[vintage]" id="vintage" class="form-control" placeholder="Vintage">
			</div>
	</div>
	
	<div class="form-group">
		<label for="color">Color</label>
			<div class="col-sm-10">
				<input type="text" name="wines[color]" id="color" class="form-control" placeholder="Color">
			</div>
	</div>
	
	<div class="form-group">
		<label for="appelation">Appelation</label>
			<div class="col-sm-10">	
				<input type="text" name="wines[appelation]" id="appelation" class="form-control" placeholder="Appelation">
			</div>
	</div>
	
	<div class="form-group">
		<label for="img">Image</label>
			<div class="col-sm-10">	
				<input type="text" name="wines[img]" id="img" class="form-control" placeholder="Image URL">
			</div>
	</div>
	<div class="form-group">
    	<div class="col-sm-offset-2 col-sm-10">
			<button type="submit" class="btn btn-default">Add the Deliciousness!</button>
		</div>
	</div>

</form>
<a href="/wines">Go Back</a>
